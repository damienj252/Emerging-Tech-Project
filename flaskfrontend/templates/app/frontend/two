                        <th><canvas id="sheet" width="200" height="150"></canvas></th>
                     </div>
                        <input type="button" id="plus" value=" + " onclick="calculator.answer.value += '+'" />
                        <input type="button" id="minus" value=" - " onclick="calculator.answer.value += '-'" />
                        <input type="button" id="multiply" value=" x " onclick="calculator.answer.value += '*'" />
                        <input type="button" id="divide" value=" / " onclick="calculator.answer.value += '/'" />
                        <input type="button" id="=equals" value=" = " onclick="calculator.answer.value = eval(calculator.answer.value)" />
        </form>

    <!-- Optional JavaScript -->
